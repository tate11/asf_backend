<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="dashboard_kanban_view" model="ir.ui.view">
            <field name="name">dashboard.view</field>
            <field name="model">dashboard</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_salesteam_kanban" create="0" js_class="sales_team_dashboard">
                    <field name="name"/>
                    <field name="color"/>
                    <field name="orders_count"/>
                    <field name="quotations_count"/>
                    <field name="orders_done_count"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <!-- <span class="pe-stack pe-lg">
                                                <i class="pe-7s-graph3 pe-stack-1x"></i>
                                            </span> -->
                                            <div class="header-icon">
                                                <i class="pe-7s-graph3"></i>
                                            </div>
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-xs-12 o_kanban_primary_left" name="to_replace_in_sale_crm">
                                            <div id="chart">
                                            </div>
                                            <field name="quotations_count" widget="asf_gauge" style="width:120px; height: 90px;"
                                                options="{'max_value': '5','demo':123}">
                                                Title
                                            </field>
                                            <field name="orders_count" widget="asf_gauge" style="width:120px; height: 90px;"
                                                options="{'max_field': 'total','demo':123}">
                                            </field>
                                            <field name="orders_done_count" widget="asf_gauge" style="width:120px; height: 90px;"
                                                options="{'max_field': 'total','demo':123}">
                                            </field>
                                        </div>
                                        <div class="col-xs-6 o_kanban_primary_right">
                                        </div>
                                    </div>
                                </div><div class="container o_kanban_card_manage_pane o_invisible">
                                    <div class="row">
                                        <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title">
                                                <span>View</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_new">
                                            <div class="o_kanban_card_manage_title">
                                                <span>New</span>
                                            </div>
                                            <div class="o_kanban_card_manage_body">
                                            </div>
                                        </div>
                                        <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_reports">
                                            <div class="o_kanban_card_manage_title">
                                                <span>Reports</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div t-if="widget.editable" class="o_kanban_card_manage_settings row" groups="sales_team.group_sale_manager">
                                        <div class="col-xs-8">
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <a type="edit">Settings</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                <!-- start(); -->
                            </script>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="dashboard_view_kanban" model="ir.ui.view">
            <field name="name">dashboard.kanban</field>
            <field name="model">dashboard</field>
            <field name="inherit_id" ref="dashboard_kanban_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//templates" position="before">
                        <field name="orders_count"/>
                        <field name="quotations_count"/>
                        <field name="orders_done_count"/>
                    </xpath>
                    <xpath expr="//div[contains(@class, 'o_kanban_primary_right')]" position="inside">
                        <div class="row mb4">
                            <div class="col-xs-8">
                                <a name="%(water_counter_list_action)d" type="action">
                                    Consumo de agua
                                </a>
                            </div>
                            <div class="col-xs-4 text-right">
                                <field name="orders_count"/>
                            </div>
                        </div>
                    </xpath>
                    <xpath expr="//div[contains(@class, 'o_kanban_card_manage_body')]" position="inside">
                        <div class="row mb4">
                            <div class="col-xs-8">
                                <a name="%(water_counter_list_action)d" type="action">
                                    Departamentos
                                </a>
                                <a name="%(tower_list_action)d" type="action">
                                    Torres
                                </a>
                            </div>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="condominium_dashboard_action" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="view_mode">kanban</field>
        </record>

        <menuitem name="Dashboard" id="webkul_employees_main_menu"/>
            <menuitem  id="employees_dashboard_menu" parent="main_condominium_menu" sequence="0" name="Dashboard" action="condominium_dashboard_action"/>
    
    </data>
</odoo>